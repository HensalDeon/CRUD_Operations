<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}
                <div class="col-md-3">
                    <div class="card">
                        <img
                            class="card-img-top"
                            src="/product_images/{{this._id}}.jpg"
                            style="height: 300px;"
                            alt="Product Image"
                        />
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <p class="card-text">{{this.description}}</p>
                            <h4>&#8377 {{this.price}}</h4>
                            <a href="/" class="btn btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>
