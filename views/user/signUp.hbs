                    <input type="text" name="name" id="name" placeholder="Name" required />
                </div>
            </div>
            <div class="email">
                <div class="input-container flex-container">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        fill="currentColor"
                        class="bi bi-envelope-at"
                        viewBox="0 0 16 16"
                    >
