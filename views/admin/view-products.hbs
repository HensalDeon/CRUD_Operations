<section>
  <div class="container mt-5">

    <table class="table table-info table-striped" id="myTable">
      <thead>
        <tr>
          <th scope="col" >No</th>
          <th scope="col">Name</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row" id="align" class="index">{{@index}}</th>
          <td id="align">{{this.Name}}</td>
          <td id="align">{{this.description}}</td>
          <td id="align">{{this.price}}</td>
          <td id="align"><img src="/product_images/{{this._id}}.jpg" style="width: 50px;" alt="books" /></td>
          <td id="align">
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
            <a href="/admin/delete-product/{{this._id}}?"
              onclick="return confirm('Are you sure you want to delete {{this.Name}} {{this.description}}?')"
              class="btn btn-danger">Delete</a>
          </td>
        </tr>

        {{/each}}

        <script>
          let count = document.getElementsByClassName('index'); for (let
            i = 0; i < count.length; i++) { count[i].innerHTML = i + 1; }
        </script>

      </tbody>
    </table>
    <div class="row m-0 mb-5">
      <a href="/admin/add-product" class="btn btn-primary fw-bold">Add Product</a>
    </div>
  </div>
</section>

