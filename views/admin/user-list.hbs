<section>
    <div class="container mt-5">

        <table class="table table-info table-striped" style="background-color:#c3dee6;">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Edit/Delete</th>

                </tr>
            </thead>
            <tbody>
                {{#each usersData}}
                <tr>
                    <th scope="row" id="align" class="index">{{@index}}</th>
                    <td id="align">{{this.name}}</td>
                    <td id="align">{{this.email}}</td>
                    <td>
                        <a href="/admin/edit-user/{{this._id}}?" class="btn btn-success">Edit</a>
                        <a href="/admin/delete-user/{{this._id}}?"
                            onclick="return confirm('Are you sure you want to delete {{this.name}} ')"
                            class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}

                <script>
                    let count = document.getElementsByClassName('index'); for (let
                        i = 0; i < count.length; i++) { count[i].innerHTML = i + 1; }
                </script>

            </tbody>
        </table>
        <div class="row m-0 mb-5">
            <a href="/admin/add-user" class="btn btn-primary fw-bold">Add user</a>
        </div>
    </div>
</section>
